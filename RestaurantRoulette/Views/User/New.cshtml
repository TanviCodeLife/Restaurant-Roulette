@using RestaurantRoulette.Models;
@{
  Layout = "_Layout";
}
<body>
  <div class="nav_bar">
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Restaurant Roulette</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/">Log Out</a>
          </ul>
        </div>
      </nav>
    </div>
    <div class="logo">
      <img class="mainLogo" src="../Images/RestaurantRouletteLogo.png" alt="picture of logo">
    </div>
    <br>
    <div class = "parent">
      <h4 class="element-align"><strong>User Registration</strong></h4>
      <form action="/users" method="post">
        <div class="form-row">
          <div class="form-group col-md-8">
            <label for="userName">Name:</label>
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Name" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-8">
            <label for="userPassword">Password:</label>
            <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Password" required>
          </div>
          <div class="form-group col-md-8">
            <label for="inputConfirmPassword">Confirm password</label>
            <input type="password" class="form-control"  placeholder="Re-enter password">
          </div>

          <div class="registration">
            <button type="submit" class="btn btn-outline-warning">Create Account and Login!</button>
          </div>
        </form>
      </div>
    </div>
  </body>

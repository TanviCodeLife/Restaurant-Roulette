@using RestaurantRoulette.Models;
@{
  Layout = "_Layout";
}
<body>
  <div class="nav_bar">
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
      <a class="navbar-brand" href="/">Restaurant Roulette</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home Page</a>
            </li>
            <li class="nav-item">
              <a href="/users/new">Register</a>
            </li>
            <li class="nav-item">
              <a href="/users">Log In</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
    <div class="logo">
      <img class="mainLogo" src="../Images/RestaurantRouletteLogo.png" alt="picture of logo">
    </div>
    <br>
    <div class = "parent">
      <h4 class="element-align-index"><strong>User Login</strong></h4>
      <form action="/users/{userName}/{userPassword}" method="POST">
        <div class="form-row1">
          <div class="form-group col-md-12">
            <label for="userName">Name:</label>
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Name" required>
          </div>
        </div>
        <div class="form-row1">
          <div class="form-group col-md-12">
            <label for="userPassword">Password:</label>
            <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Password" required>
          </div>
        </div>
        <div class="registration">
          <button type="submit" class="btn btn-outline-warning" style="margin-left: 45%">Login!</button>
        </div>
      </form>
    </div>
  </body>

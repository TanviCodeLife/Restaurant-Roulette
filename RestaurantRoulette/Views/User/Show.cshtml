@using RestaurantRoulette.Models;
@{
  Layout = "_Layout";
}
<body>
  <div class="nav_bar">
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Restaurant Roulette</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/">Log Out</a>
          </ul>
        </div>
      </nav>
    </div>
  <div class="element-align">

  
  <h4 class=""><strong>User Profile</strong></h4>
  <p>@Model.GetName()</p>
  <p>@Model.GetBio()</p>
  <p>@Model.GetPrice()</p>
  <p>@Model.GetDistance()</p>
  <div class="container">
    <form class="price">
      <div class="form-group">
        <label for="formControlRange">Price Range</label>
        <div class=priceRange>
          <p>$25 - $100</p>
        </div>


        <input type="range" class="form-control-range" id="formControlRange">
      </div>
    </form>
  </div>
  <div class="container">
    <form class="price">
      <div class="form-group">
        <label for="formControlRange">Distance Range</label>
        <div class=distanceRange>
          <p>1 mile - 5 mile</p>
        </div>
        <input type="range" class="form-control-range" id="formControlRange">
      </div>
    </form>
  </div>


  <div class="show_buttons">
    <a href="/users/@Model.GetId()/edit" class="btn btn-danger btn-lg" role="button">Edit My Details</a>
    <a href="/users/@Model.GetId()/all" class="btn btn-danger btn-lg" role="button">All Options</a>
    <a href="/users/@Model.GetId()/favorites-list" class="btn btn-danger btn-lg" role="button">Fav Options</a>
  </div>
  </div>
</body>

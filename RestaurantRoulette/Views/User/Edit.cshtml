@using RestaurantRoulette.Models;
@{
  Layout = "_Layout";
}
<body>
<div class="nav_bar">
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Restaurant Roulette</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/">Log Out</a>
        </ul>
      </div>
    </nav>
    <div class="logo">
        <img class="mainLogo" src="~/Images/RestaurantRouletteLogo.png" alt="picture of logo">
      </div>

    <div class = "parent">
    <div class="element-align">
        <h4><strong>User Preferences</strong></h4>
    </div>


<div class="range">


      <form action="/users/@Model.GetId()/update" method="post">
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="userDist">Enter Distance Range:</label>
            <input type="text" class="form-control" id="userDist" name="userDist" placeholder="Distance" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="userPrice">Enter Price Range(USD):</label>
            <input type="text" class="form-control" id="userPrice" name="userPrice" placeholder="Price" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="userBio">Something About Yourself:</label>
            <input type="text" class="form-control" id="userBio" name="userBio" placeholder="Bio">
          </div>
        </div>
        <div class="edit_button">
          <button type="submit" class="btn btn-outline-warning">Add My Details!</button>
  </div>
      </form>

      </div>
    </div>
</div>
</body>

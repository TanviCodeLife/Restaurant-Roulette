@using RestaurantRoulette.Models;
@{
  Layout = "_Layout";
}
<div class="container">
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Restaurant Roulette</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home Page</a>
          </li>
        <li class="nav-item">
          <a href="/users/new">Register</a>
        </li>
        <li class="nav-item">
          <a href="/users">Log In</a>
        </li>
        </ul>
      </div>
    </nav>
    <div class="jumbotron jumbotron-fluid">
      <h1 class="display-4">Restaurant Roulette</h1>
      <p class="lead">Game To Select Random Restaurant</p>
      <hr class="my-4">
      <a class="btn btn-primary" href="/users/new" role="button" style="margin-left: 45%">New User</a>
      <a class="btn btn-primary" href="/users" role="button" style="margin-left: 45%">Log In</a>
    </div>
    <div class = "parent">
      <img class= "image1"rc="Images/Wheel.png" alt="">
      <img class="image2"src="Images/ball.png" alt="">
      <h4 class="element-align"><strong>User Preferences</strong></h4>
      <form action="/users/@Model.GetId()/update" method="post">
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="userDist">Enter Distance Range:</label>
            <input type="text" class="form-control" id="userDist" name="userDist" placeholder="Distance" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="userPrice">Enter Price Range(USD):</label>
            <input type="text" class="form-control" id="userPrice" name="userPrice" placeholder="Price" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="userBio">Something About Yourself:</label>
            <input type="text" class="form-control" id="userBio" name="userBio" placeholder="Bio">
          </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-left: 45%">Add My Details!</button>
      </form>
    </div>
  </div>

@using RestaurantRoulette.Models;

@{
  Layout = "_Layout";
}
<body>
  <div class="logo">
      <img class="mainLogo" src="~/Images/RestaurantRouletteLogo.png" alt="picture of logo">
    </div>

  <div class="nav_bar">
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Restaurant Roulette</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home Page</a>
          </li>
        </ul>
      </div>
    </nav>
  </div>

    <form action="/users/@Model["user"].GetId()/favorites/add" method="post">
      <input type="hidden" name="name" value="@Model["regRollRest"].GetName()">
      <input type="hidden" name="address" value="@Model["regRollRest"].GetAddress()">
      <input type="hidden" name="latitude" value="@Model["regRollRest"].GetLatitude()">
      <input type="hidden" name="longitude" value="@Model["regRollRest"].GetLongitude()">
      <input type="hidden" name="cost" value="@Model["regRollRest"].GetCostForTwo()">
      <input type="hidden" name="cusine" value="@Model["regRollRest"].GetFavCusine()">
      <input type="hidden" name="menu" value="@Model["regRollRest"].GetMenuUrl()">
      <input type="hidden" name="page" value="@Model["regRollRest"].GetPageUrl()">
      <br>
      <br>
      <div class="show_fav">


      <button type="submit" class="btn btn-outline-warning">Add To Your Favs!</button>
        </div>
    </form>
    <br>
    @* <div class="user_profile">
      <div class="element-align">
<h4 class=""><strong>User Profile</strong></h4>
      </div> *@
    </div>
    <div class="favorite_list">


    <p><strong>@Model["regRollRest"].GetName()</strong></p>
    <p>@Model["regRollRest"].GetAddress()</p>
    <p>@Model["regRollRest"].GetMenuUrl()</p>
    <p>@Model["regRollRest"].GetPageUrl()</p>
  </div>
